<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="false" android:state_pressed="false">

        <layer-list>

            <!-- Stripe bottom indicator color -->
            <item android:left="-10dp" android:right="-10dp" android:top="-2dp">
                <shape android:layout_height="1dp" android:shape="rectangle">
                    <stroke android:width="2dp" android:color="#3D99C9" />
                    <corners android:radius="1dp" android:top="-3dp" android:right="10dp" android:left="10dp" />
                </shape>
            </item>



        </layer-list>

    </item>

</selector>